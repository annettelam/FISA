---
// src/pages/admin.astro

import ActiveTableSelector from '../components/AdminDatabase/ActiveTableSelector.astro';
import TableSelector from '../components/AdminDatabase/TableSelector.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Admin Panel">
  <div class="max-w-7xl mx-auto mt-10 p-8 bg-white dark:bg-gray-800 shadow-md dark:shadow-lg rounded-lg transition-colors duration-300">
    <div class="text-center mb-10">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-6">Admin Panel</h1>
      <p class="text-lg text-gray-600 dark:text-gray-300">
        Manage active school table, select tables, and duplicate tables as needed.
      </p>
    </div>

    <!-- Active Table Management Section -->
    <section class="mb-12">
      <div class="bg-gray-100 dark:bg-gray-700 p-6 rounded-lg shadow-md max-w-xl mx-auto">
        <ActiveTableSelector />
      </div>
    </section>

    <!-- Duplicate Table Section with Matched Darker Background -->
    <section class="mb-12">
      <div class="bg-gray-100 dark:bg-gray-700 p-6 rounded-lg shadow-md max-w-xl mx-auto">
        <div class="bg-gray-900 dark:bg-gray-900 p-6 rounded-lg">
          <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-100 mb-4">Duplicate Table</h2>
          <p class="text-gray-600 dark:text-gray-300 mb-4">Select a source table and enter a new table name to duplicate it.</p>
          <TableSelector />
        </div>
      </div>
    </section>
  </div>
</Layout>
