---
// src/pages/admin.astro

import ActiveTableSelector from '../components/AdminDatabase/ActiveTableSelector.astro';
import TableDuplicator from '../components/AdminDatabase/TableDuplicator.astro';
import TableSelector from '../components/AdminDatabase/TableSelector.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Admin Panel">
  <div class="max-w-7xl mx-auto mt-10 p-8 bg-white dark:bg-gray-800 shadow-md rounded-lg transition-colors duration-300">
    <div class="text-center mb-10">
      <h1 class="text-3xl font-bold text-gray-800 dark:text-gray-100">Admin Panel</h1>
      <p class="text-gray-600 dark:text-gray-300">
        Manage active database, select tables, and duplicate tables as needed.
      </p>
    </div>

    <section class="mb-8">
      <h2 class="text-2xl font-semibold text-gray-800 dark:text-gray-100 mb-4">Select Active Table</h2>
      <div class="bg-gray-100 dark:bg-gray-700 p-4 rounded-md shadow-sm">
        <ActiveTableSelector />
      </div>
    </section>

   

    <section>
      <h2 class="text-2xl font-semibold text-gray-800 dark:text-gray-100 mb-4">Duplicate Table</h2>
      <div class="bg-gray-100 dark:bg-gray-700 p-4 rounded-md shadow-sm">
        <TableSelector />
      </div>
    </section>
  </div>
</Layout>
