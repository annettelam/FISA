---
// src/pages/admin/review-client-changes.astro

import Layout from '../layouts/Layout.astro';
import UpdateContainer from '../components/ReviewClientChanges/UpdateContainer.astro';
---
<Layout title="Admin - Proposed Updates">
  <div class="max-w-7xl mx-auto mt-10 p-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Proposed Updates</h1>
<h3 class="text-1xl font-bold text-gray-800 mb-6">(This page automatically refreshes every 3 seconds.)</h3>
    
    <!-- Admin View Container -->
    <div id="alertContainer"></div>
    <div id="updatesContainer" class="space-y-4">
      <!-- UpdatesContainer component handles fetching and displaying updates -->
      <UpdateContainer />
    </div>
  </div>
</Layout>
