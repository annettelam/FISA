---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Welcome to FISA Portal">
  <!-- Header Section -->
  <header
    class="bg-gradient-to-r from-blue-800 to-blue-700 text-white py-12 sm:py-16 md:py-20"
  >
    <div class="max-w-7xl mx-auto px-4 text-center">
      <h1
        class="text-4xl sm:text-5xl font-extrabold mb-4 sm:mb-6 drop-shadow-md"
      >
        Welcome to <span class="text-white">FISA Portal</span>
      </h1>
      <p class="text-base sm:text-lg md:text-xl max-w-2xl mx-auto">
        <strong>Your all-in-one registration hub:</strong><br />
        Get started by having your school ID number ready.
      </p>
      <div class="mt-6 sm:mt-8">
        <a
          href="/register"
          class="inline-block bg-blue-500 text-white font-semibold py-2 sm:py-3 px-6 sm:px-8 rounded-full shadow hover:bg-blue-600 transition"
        >
          Get Started
        </a>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="bg-white dark:bg-gray-900 py-12 sm:py-16 md:py-20">
    <div class="max-w-7xl mx-auto px-4">
      <!-- Services Section -->
      <section class="text-center mb-12 sm:mb-16">
        <h2
          class="text-2xl sm:text-3xl font-bold mb-4 sm:mb-6 text-blue-800 dark:text-white"
        >
          Our Services
        </h2>
        <p
          class="text-sm sm:text-base text-blue-600 dark:text-gray-300 max-w-2xl mx-auto"
        >
          Explore the various features we offer to streamline your registration
          and management processes.
        </p>
      </section>

      <!-- Grid for Cards -->
      <ul
        role="list"
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8"
      >
        <!-- Existing Card Components -->
        <Card
          href="/register"
          icon="fa-solid fa-user-plus"
          title="Register"
          body="New independent school? Register with us seamlessly."
        />
        <Card
          href="/login"
          icon="fa-solid fa-sign-in-alt"
          title="Login"
          body="Already registered? Access your account to manage payments or update your profile."
        />
        <Card
          href="/fact-sheet"
          icon="fa-solid fa-file-alt"
          title="FISA Fact Sheet"
          body="View and submit updates to school information easily."
        />
        <Card
          href="/changelog"
          icon="fa-solid fa-list-alt"
          title="FISA Changelog"
          body="Admins can review all changes made to schools here."
        />
        <Card
          href="/review-client-changes"
          icon="fa-solid fa-check-circle"
          title="Review Pending Updates"
          body="Admins can approve or reject school update requests efficiently."
        />
        <Card
          href="/generate-invoices"
          icon="fa-solid fa-database"
          title="Generate Invoices"
          body="Generate FISA, EDBC, or Make a Future invoices as needed."
        />
        <Card
          href="/fisa-fees"
          icon="fa-solid fa-receipt"
          title="FISA Fees Invoice"
          body="Manage and review your fee invoices with ease."
        />
        <Card
          href="/myedbc"
          icon="fa-solid fa-calculator"
          title="My EDBC Fees Invoice"
          body="Calculate and submit your EDBC fee invoices seamlessly."
        />
        <Card
          href="/makeafuture"
          icon="fa-solid fa-rocket"
          title="Make a Future Fees Invoice"
          body="Plan and submit future fee invoices effortlessly."
        />
        <Card
          href="/reminders"
          icon="fa-solid fa-exclamation-circle"
          title="Overdue Payments"
          body="View schools with overdue payments and take action."
        />
        <Card
          href="/database"
          icon="fa-solid fa-database"
          title="Database Visualization"
          body="Explore the detailed data of all schools."
        />
        <Card
          href="/admin"
          icon="fa-solid fa-user-shield"
          title="Admin Dashboard"
          body="Manage databases, create new tables, and oversee system settings."
        />
      </ul>
    </div>
  </main>
</Layout>

<style>
  /* Import Font Awesome for icons */
  @import url("https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css");
</style>
