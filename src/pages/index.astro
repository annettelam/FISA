---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Welcome to FISA Portal">
	<main class="mx-auto max-w-7xl py-12 px-4 sm:px-6 lg:px-8 text-center">
		<h1 class="text-4xl font-bold text-gradient mb-6">
			Welcome to <span class="text-gradient">FISA Portal</span>
		</h1>
		<p class="instructions text-lg leading-6 text-gray-100 mb-8 max-w-3xl mx-auto">
			<strong>All your registration needs:</strong><br />
			To get started, have your school information such as ID number ready.
		</p>

		<!-- Grid for cards -->
		<ul role="list" class="link-card-grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
			<Card
				href="/register"
				title="Register"
				body="New independent school? Register with us."
			/>
			<Card
				href="/login"
				title="Login"
				body="Already registered? Login to your account to make payments or edit profile."
			/>
			<Card
				href="fact-sheet"
				title="FISA Fact Sheet"
				body="Fact sheet where users and admins can submit updates to information for school."
			/>
		<Card
				href="changelog"
				title="FISA Changelog"
				body="Admins can review all changes made to schools here."
			/>
			<Card
				href="review-client-changes"
				title="Review Pending School Updates."
				body="Admins can accept or reject school update requests here."
			/>
			<Card
				href="fisa-fees"
				title="FISA Fees Invoice"
				body="Math formulas working, but not submitting to a server."
			/>
			<Card
				href="myedbc"
				title="My EDBC Fees Invoice"
				body="Math formulas working, but not submitting to a server."
			/>
			<Card
				href="makeafuture"
				title="Make a Future Fees Invoice"
				body="Math formulas working, but not submitting to a server."
			/>
		</ul>
	</main>
</Layout>

<style>
	/* Main Layout Styles */
	main {
		color: #f5f5f5;
	}

	/* Typography */
	h1 {
		font-size: 2.5rem;
		font-weight: 800;
		line-height: 1.2;
		margin-bottom: 1.5rem;
	}
	.text-gradient {
		background-image: linear-gradient(90deg, #38bdf8, #3b82f6, #6366f1);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	/* Instructions Box */
	.instructions {
		padding: 1.25rem;
		border-radius: 0.5rem;
		background: linear-gradient(135deg, #111827, #1f2937);
		border: 1px solid rgba(255, 255, 255, 0.2);
	}

	/* Card Grid */
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 1.5rem;
	}

	/* Responsive Styles for Card */
	@media (min-width: 1024px) {
		h1 {
			font-size: 3.5rem;
		}
	}
</style>
