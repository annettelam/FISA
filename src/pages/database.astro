---
const response = await fetch('http://localhost:4321/api/data');
const data = await response.json();

const headers = Object.keys(data[0]); // Extract headers from the first row
---
<html>
  <head>
    <title>Database Visualization</title>
    <!-- Include Flowbite styles -->
    <link href="https://cdn.jsdelivr.net/npm/flowbite@1.5.1/dist/flowbite.min.css" rel="stylesheet">
    <style>
      .table-container {
        display: flex;
        flex-direction: column;
        height: 70vh; /* Adjust this to take more vertical space */
      }
      .table-header,
      .table-body {
        width: 100%;
        overflow-x: auto; /* Enable horizontal scroll for both header and body */
      }
      .table-body {
        overflow-y: auto; /* Enable vertical scrolling for the body */
        flex: 1;
      }
      table {
        width: 100%;
        table-layout: auto; /* Allow columns to adjust based on content */
      }
      th,
      td {
        text-align: left;
        white-space: nowrap; /* Prevent text from wrapping */
        padding: 8px 12px; /* Add padding to make the table more readable */
        min-width: 120px; /* Minimum width for each column to prevent overlapping */
      }
    </style>
  </head>
  <body>
    <div class="container mx-auto p-4">
      <h1 class="text-3xl font-bold mb-4">Database Visualization</h1>

      <!-- Table with scrollable body -->
      <div class="table-container border border-gray-300">
        <!-- Table Header -->
        <div class="table-header">
          <table class="min-w-full text-sm text-left text-gray-500 border-collapse">
            <thead class="text-xs text-gray-700 uppercase bg-gray-100 sticky top-0 z-10">
              <tr>
                {headers.map((key) => (
                  <th class="border px-6 py-3">{key}</th>
                ))}
              </tr>
            </thead>
          </table>
        </div>

        <!-- Scrollable Table Body -->
        <div class="table-body">
          <table class="min-w-full text-sm text-left text-gray-500 border-collapse">
            <tbody>
              {data.map((row, index) => (
                <tr class={`${index % 2 === 0 ? 'bg-white' : 'bg-gray-50'} border-b`}>
                  {headers.map((key) => (
                    <td class="border px-6 py-4">{row[key]}</td>
                  ))}
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Flowbite JavaScript (for additional interactive features if needed) -->
    <script src="https://unpkg.com/flowbite@1.5.1/dist/flowbite.js"></script>
  </body>
</html>
