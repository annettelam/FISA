---
import Layout from "../layouts/Layout.astro";

const user = Astro.locals.user;

let contactDetails = {
    address: "4885 Saint John Paul II Way, Vancouver, B.C. V5Z 0G3",
    phone: "604.684.6023",
    email: "info@fisabc.ca",
    mapSrc: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d10419.30692463796!2d-123.1225228!3d49.2417742!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xc7d06755e4e64da1!2sFederation+of+Independent+School+Associations!5e0!3m2!1sen!2sca!4v1496766715798",
};
---

<Layout title="Contact Us">
    <div
        class="max-w-7xl mx-auto mt-10 p-8 bg-white dark:bg-gray-800 shadow-md dark:shadow-lg rounded-lg transition-colors duration-300"
    >
        <div class="text-center mb-10">
            <h1 class="text-3xl font-bold text-gray-800 dark:text-gray-100">
                Contact Us
            </h1>
            <p class="text-gray-600 dark:text-gray-300">
                We look forward to hearing from you. Specific information such
                as admission process, curriculum offerings, and tuition fees can
                only be obtained by contacting individual schools.
            </p>
        </div>

        <!-- Contact Information -->
        <div class="space-y-4">
            <p class="text-lg text-gray-800 dark:text-gray-100">
                <strong
                    >Federation of Independent School Associations in British
                    Columbia</strong
                ><br />
                {contactDetails.address}
            </p>
            <p class="text-lg text-gray-800 dark:text-gray-100">
                <strong>Phone:</strong>
                {contactDetails.phone}
            </p>
            <p class="text-lg text-gray-800 dark:text-gray-100">
                <strong>Email:</strong>
                <a
                    href={"mailto:" + contactDetails.email}
                    class="text-blue-600 dark:text-blue-400 hover:underline"
                    >{contactDetails.email}</a
                >
            </p>

            <!-- Google Maps Embed -->
            <div class="mt-6">
                <iframe
                    style="border: 0;"
                    src={contactDetails.mapSrc}
                    width="100%"
                    height="360"
                    frameborder="0"
                    allowfullscreen="allowfullscreen"></iframe>
            </div>
        </div>
    </div>
</Layout>
