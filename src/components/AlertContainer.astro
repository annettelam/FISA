---
// src/components/AlertContainer.astro

const { message, type } = Astro.props;

// If no message is provided, render nothing
if (!message) {
  return null;
}
---

<div class={`p-4 mb-4 text-sm rounded-lg ${type === 'success' ? 'text-green-700 bg-green-100' : 'text-red-700 bg-red-100'}`} role="alert" id="alertMessage">
  {message}
</div>
