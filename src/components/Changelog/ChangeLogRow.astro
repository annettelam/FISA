---
interface Log {
  school_num: string;
  field_changed: string;
  old_value: string;
  new_value: string;
  updated_by: string;
  timestamp: string;
  active_table_at_change: string; // Add active table to the log interface
}

const { log } = Astro.props;
---

<tr>
  <td class="px-4 py-2">{log.field_changed}</td>
  <td class="px-4 py-2">{log.old_value || 'N/A'}</td>
  <td class="px-4 py-2">{log.new_value || 'N/A'}</td>
  <td class="px-4 py-2">{log.updated_by}</td>
  <td class="px-4 py-2">{log.timestamp}</td>
  <!-- Add Active Table value -->
  <td class="px-4 py-2">{log.active_table_at_change}</td>
</tr>
