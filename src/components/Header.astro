    }

    .theme-toggle-btn:hover i {
      transform: rotate(20deg) scale(1.1);
      text-shadow: 0 0 10px rgba(255, 255, 255, 0.7);
    }

    .theme-toggle-btn:active i {
      transform: scale(0.9);
    }
  </style>
